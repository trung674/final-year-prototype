extends ../template/user_layout

block main_content
  div.container
    h1= "Welcome, " + user.information.fullname
    hr
    div.well Please find below the list of newest sessions provided by the administrators and the list of ongoing sessions which you have not finished yet.
    div.row
      div.col-md-4.user-db-col
        h3.text-center New Sessions
        table.table.table-bordered
          tr
            th Title
            th Date added
          if newRecordings
            each recording in newRecordings
              tr
                td
                  a(href=`/user/session/${recording._id}`)= recording.title
                td= moment(recording.createdAt).format("YYYY-MM-DD")

      div.col-md-4.user-db-col
        h3.text-center Ongoing Sessions
      div.col-md-4.user-db-col
        h3.text-center Finished Sessions


