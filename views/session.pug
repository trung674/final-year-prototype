extends template/layout

block content
  div.container
    div.row
      div.col-md-6.col-md-offset-3
        h1.text-center Create Session
        form(action='/session', method='POST')
          .form-group
            input(type='text', name='title', class='form-control', placeholder='Title',required)
          .form-group
            textarea.form-control(rows='4', name='description', placeholder='Session Description....')
          .form-group
            select.form-control(name='type')
              option(value='', disabled, selected, hidden) Sesstion type ?
              option(value='words') Words
              option(value='sentences') Sentences
              option(value='mix') Mix Words/Sentences
              option(value='paragraphs') Short paragraph(s)
              option(value='speech') Free speech
          .form-group
            textarea.form-control(rows='4', name='content', placeholder='Session content....')    
          button(class='btn btn-lg btn-primary btn-block', type='submit') Submit
