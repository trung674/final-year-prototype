<!DOCTYPE html>
<html>
  <head>
    <% include partials/template/head.ejs %>
  </head>
  <body>
    <!-- Nav Bar -->
    <nav class="navbar navbar-default">
      <div class="container">
        <!-- Brand and toggle get grouped for better mobile display -->
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">Village Memories Group</a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav navbar-right">
            <li><a href="#">Upload</a></li>
            <li><a href="#">About</a></li>
            <li><a href="#">Event</a></li>
            <li><a href="#">Map</a></li>
            <li><a href="#">Contact</a></li>
          </ul>
        </div><!-- /.navbar-collapse -->
      </div><!-- /.container-fluid -->
    </nav> <!-- End Nav Bar -->

    <!-- Main Content -->
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="row">
            <!-- Image Slider -->
            <div class="col-md-8">
              <div id="image-slider" class="carousel slide" data-ride="carousel">
                <!-- Indicators -->
                <ol class="carousel-indicators">
                  <li data-target="#image-slider" data-slide-to="0" class="active"></li>
                  <li data-target="#image-slider" data-slide-to="1"></li>
                  <li data-target="#image-slider" data-slide-to="2"></li>
                </ol>
              
                <!-- Wrapper for slides -->
                <div class="carousel-inner" role="listbox">
                  <% if (images.length > 0) { %>
                  <%  images.forEach(function(image, index){ %>
                  <%    if(index == 0) { %>
                          <div class="item active">
                  <%    } else { %> 
                          <div class="item">
                  <%    } %>      
                        <img src="images/<%= image %>" alt="<%= image %>" class="img-thumbnail">
                        </div>
                   <% }); %>
                  <% } %>
                  <!-- 
                  <div class="item active">
                    <img src="images/1.jpeg" alt="1" class="img-thumbnail">
                  </div>
                  <div class="item">
                    <img src="images/2.jpg" alt="2">
                  </div>
                  <div class="item">
                    <img src="images/3.jpg" alt="3">
                  </div> -->
                </div>
              
                <!-- Controls -->
                <!--
                <a class="left carousel-control" href="#image-slider" role="button" data-slide="prev">
                  <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
                  <span class="sr-only">Previous</span>
                </a>
                <a class="right carousel-control" href="#image-slider" role="button" data-slide="next">
                  <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
                  <span class="sr-only">Next</span>
                </a> -->
                
              </div>
            </div> <!-- End Image Slider -->
            <div class="col-md-4">
              <div class="row">
                <!-- Search Form -->
                <div class="col-md-12 search-bar">
                  <div class="page-header">
                    <h2>Search our archive</h2>
                  </div><!-- /page-header -->
                  <form class="form-group">
                    <div class="input-group">
                      <input type="text" class="form-control" placeholder="Search for...">
                      <span class="input-group-btn">
                        <button class="btn btn-primary" type="button">Go!</button>
                      </span>
                    </div><!-- /input-group -->
                    <label class="checkbox-inline">
                      <input type="checkbox" name="inlineRadioOptions" value="recording"> Recording
                    </label>
                    <label class="checkbox-inline">
                      <input type="checkbox" name="inlineRadioOptions" value="document"> Document
                    </label>
                    <label class="checkbox-inline">
                      <input type="checkbox" name="inlineRadioOptions" value="image"> Image
                    </label>
                    <label class="checkbox-inline">
                      <input type="checkbox" name="inlineRadioOptions" value="text"> Text
                    </label>
                  </form>
                </div> <!-- End Search Form -->
                
                <!-- Event List -->
                <div class="col-md-12">
                  <div class="page-header">
                    <h3>Upcoming Events</h3>
                  </div>
                  <table class="table">
                    <tr>
                      <th width="69%">Name</th>
                      <th width="31%">Date</th>
                    </tr>
                    <tr>
                      <td>Town Tour</td>
                      <td>02/10/2016</td>
                    </tr>
                    <tr>
                      <td>Visiting Church</td>
                      <td>03/07/2017</td>
                    </tr>
                  </table>
                </div> <!-- End Event List -->
              </div>
            </div>
          </div>
        </div>
      </div>

    </div>



  </body>

  <footer>

  </footer>
</html>
