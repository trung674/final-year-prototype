div.panel.panel-info
  div.panel-heading Contents
  div.panel-body
    div.row
      div.col-md-7
        - var content = recording.content[reqIndex].replace(/\n?\r?\r\n/g, '<br />' );
        p.well#word !{content}
      div.col-md-5
        div.text-center
          div.col-md-12
            div.panel.panel-default
              div.panel-body
                h4#recording-status Click on the Microphone icon to start recoring
          div.col-md-12#btn-control-2
            div.col-md-2.col-md-offset-2
              if reqIndex != 0
                a.btn-control#btn-back(href=`${parseInt(reqIndex) - 1}`)
                  i.fa.fa-backward.fa-4x
            div.col-md-2.col-md-offset-1
              a.btn-control#btn-record(onclick='onBtnRecordClicked()')
                i.fa.fa-microphone.fa-5x
            div.col-md-2.col-md-offset-1
              if (reqIndex != recording.content.length - 1)
                a.btn-control#btn-next(onclick='onBtnNextClicked()')
                  i.fa.fa-forward.fa-4x