extends template/layout

block content
  div.container
    div.row
      div.col-md-6.col-md-offset-3
        h1.text-center Check your details below:
        ul.user-details
          li ID ---> #{user._id}
          li Username ---> #{user.email}
        a(href='/signout', class='text-center') Sign Out

    .row
      div.col-md-6.col-md-offset-3
        h2.text-center Record video
        //audio(controls)

        canvas.visualizer
        br
        button.btn.btn-primary#rec(onclick='onBtnRecordClicked()') Record
        button.btn.btn-primary#pauseRes(onclick='onPauseResumeClicked()' disabled) Pause
        button.btn.btn-primary#stop(onclick='onBtnStopClick()' disabled) Stop

        div.sound-clips
        br
        p#data

  script(src='/javascripts/recorder.js')
